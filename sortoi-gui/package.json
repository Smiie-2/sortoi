{
  "name": "sortoi-gui",
  "version": "1.0.1",
  "description": "GUI for Sortoi",
  "type": "module",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "run-p dev:renderer dev:main:watch dev:main",
    "dev:renderer": "vite --port 5173",
    "dev:main:watch": "tsc --project tsconfig.json --watch --preserveWatchOutput",
    "dev:main": "wait-on dist/main/main.js http://localhost:5173 && cross-env NODE_ENV=development electron .",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc --project tsconfig.json"
  },
  "dependencies": {
    "@sortoi/core": "workspace:*",
    "dotenv": "^17.3.1",
    "electron-store": "^11.0.2",
    "lucide-react": "^0.574.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.3",
    "@types/node": "^24.10.13",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "cross-env": "^10.1.0",
    "electron": "^40.4.1",
    "electron-builder": "^26.8.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "wait-on": "^9.0.4"
  }
}
