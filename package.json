{
  "name": "sortoi-monorepo",
  "private": true,
  "version": "1.0.1",
  "description": "Una herramienta CLI para organizar archivos de forma inteligente utilizando IA.",
  "scripts": {
    "test": "pnpm --filter @sortoi/core test",
    "build": "pnpm --filter @sortoi/core build && pnpm --filter sortoi-gui build",
    "gui:dev": "pnpm --filter sortoi-gui dev",
    "cli:dev": "pnpm --filter @sortoi/core dev",
    "clean:db": "node scripts/clean-db.js"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.18.2"
}
